<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Polaris" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/belowBackground</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>
        <item name="android:windowBackground">@color/belowBackground</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/primary</item> <!--Task manager toolbar-->
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorAccent">@color/primary</item> <!--Media player seek bar-->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primaryVariant</item>
        <item name="colorError">@color/error</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <item name="colorHeaderBackground">@color/headerBackground</item>
        <item name="colorHeaderTextPrimary">@color/headerTextPrimary</item>
        <item name="colorHeaderTextSecondary">@color/headerTextSecondary</item>
        <item name="colorDialogDivider">@color/dialogDivider</item>
        <item name="colorDivider">@color/divider</item>

        <item name="dialogCornerRadius">8dp</item>

        <item name="recyclerViewStyle">@style/RecyclerView</item>
        <item name="navigationViewStyle">@style/BackdropNavigation</item>
    </style>

    <style name="RecyclerView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorDivider</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">?colorDivider</item>
    </style>

    <style name="DialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorDialogDivider</item>
    </style>

    <style name="BackdropNavigation" parent="Widget.Design.NavigationView">
        <item name="background">@color/belowBackground</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="CollectionButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:background">@color/background</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DetailsLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailsValue" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
