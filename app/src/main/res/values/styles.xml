<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Polaris" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue600</item>
        <item name="colorPrimaryDark">@color/lightBlue800</item>
        <item name="colorAccent">@color/lightBlue600</item>
        <item name="colorSecondary">@color/lightBlue600</item>

        <item name="colorAdd">@color/add</item>

        <item name="android:statusBarColor">?colorBackgroundFloating</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>

        <item name="materialCardViewStyle">@style/Card</item>
    </style>

    <!-- Override Styles -->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <!-- Custom Styles -->
    <style name="CollectionSection" parent="Widget.MaterialComponents.TextView">
        <item name="drawableTint">?colorOnBackground</item>
        <item name="android:drawablePadding">@dimen/collection_section_icon_padding</item>
        <item name="android:padding">@dimen/collection_section_text_padding</item>
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CollectionItem" parent="Widget.MaterialComponents.TextView">
        <item name="drawableTint">?colorOnBackground</item>
        <item name="android:drawablePadding">@dimen/collection_item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/collection_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/collection_item_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/collection_item_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/collection_item_horizontal_padding</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
