<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collection"
    app:startDestination="@+id/nav_collection">

    <fragment
        android:id="@+id/nav_collection"
        android:name="agersant.polaris.features.collection.CollectionFragment"
        android:label="@string/collection"
        tools:layout="@layout/fragment_collection">
        <action
            android:id="@+id/action_nav_collection_to_nav_directories"
            app:destination="@id/nav_directories" />
    </fragment>

    <fragment
        android:id="@+id/nav_directories"
        android:name="agersant.polaris.features.collection.directories.DirectoriesFragment"
        android:label="@string/collection"
        tools:layout="@layout/fragment_directories" />

    <include app:graph="@navigation/settings" />
    <include app:graph="@navigation/about" />

</navigation>